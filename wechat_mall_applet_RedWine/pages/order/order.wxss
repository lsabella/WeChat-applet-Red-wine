.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 12px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 40px;
    padding: 5px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}